<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editTaskOverview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".editTask" >


    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="3dp"
        android:text="Back" />

    <Spinner
        android:id="@+id/choose_task"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:ems="10"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/name_of_task"
        android:layout_width="243dp"
        android:layout_height="70dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:ems="10"
        android:hint="Name of Task"
        android:inputType="text" />

    <EditText
            android:id="@+id/location_of_task"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:ems="10"
            android:hint="Location if Applicable"
            android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/selectTypeOfTask"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:ems="10"
            android:text="\n Type of Task" />

        <Spinner
            android:id="@+id/taskTypeSpinner"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/selectClassTask"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:ems="10"
            android:text="\n Class of Task" />

        <Spinner
            android:id="@+id/classSpinnerTask"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/selectPriorityTask"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:ems="10"
            android:text="\n Priority of Task" />

        <Spinner
            android:id="@+id/prioritySpinnerTask"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:ems="10" />

    </LinearLayout>

    <Button
        android:id="@+id/datePickerButtonTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="0dp"
        android:onClick="showDatePickerDialog"
        android:text="Pick Date" />

    <Button
        android:id="@+id/timePickerButtonTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="0dp"
        android:onClick="showTimePickerDialog"
        android:text="Pick Time" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="0dp"
        android:text="Save" />

</LinearLayout>